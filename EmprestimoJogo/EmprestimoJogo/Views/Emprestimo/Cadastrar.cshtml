@model EmprestimosModel
@{
	ViewData["title"] = "Cadastrar Emprestimo"; //mudando titulo da pagina
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Empréstimos</h1>

    </div>
<form method="post" asp-controller="Emprestimo" asp-action="Cadastar">
    <div class="mb-3">
        <label for="Recebedor" class="form-label text-light">Recebedor</label>
        <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem esta recebendo o jogo?">
            <span class="text-danger" asp-validation-for="Recebedor"></span>
    </div>

    <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor </label>
        <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem esta emprestando o jogo?">
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
    </div>

    <div class="mb-3">
        <label for="Jogo" class="form-label text-light">Jogo</label>
            <input type="text" class="form-control" asp-for="JogoEmprestado" id="Jogo" placeholder="Qual o nome do jogo?">
            <span class="text-danger" asp-validation-for="JogoEmprestado"></span>
    </div>

    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-success w-50 " asp-controller="Emprestimo">Adicionar</button>
        <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
    </div>

</form>
</div>
